@using Hospital.ViewModels

@model IEnumerable<AdminViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Admins</h1>

<a asp-action="Create" class="btn btn-success">Create Admin</a>
<br />

@{
    if (Model.Count() > 0)
    {

        <br />
        <table class="table table-striped table-hover mt-3">

            <thead>
                <tr>
                    <td>Id</td>
                    <td>Email</td>
                    <td>Details</td>
                    <td>Update</td>
                    <td>Delete</td>

                </tr>
            </thead>

            <tbody>
                @foreach (var Admin in Model)
                {
                    <tr>
                        <td>@Admin.Id</td>
                        <td>@Admin.Email</td>

                        <td><a asp-action="Details" asp-route-id="@Admin.Id" class="text-info"><i class="fas fa-eye"></i></a></td>
                        <td><a asp-action="Edit" asp-route-id="@Admin.Id" class="text-warning"><i class="fas fa-edit"></i></a></td>
                        <td><a asp-action="Delete" asp-route-id="@Admin.Id" class="text-danger"><i class="fas fa-trash"></i></a></td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <div class="mt-5 alert alert-warning">
            <h3>No Admins</h3>
        </div>
    }
}

