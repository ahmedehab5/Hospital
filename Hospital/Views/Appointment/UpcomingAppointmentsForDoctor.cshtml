@model IEnumerable<Hospital.Models.Appointment>

@{
    ViewData["Title"] = "Upcoming Appointments for Doctor";
}

<h1>Upcoming Appointments for Dr. @ViewData["DoctorName"]</h1>
<table class="table">
    <thead>
        <tr>
            <th>Patient</th>
            <th>Specialization</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var appointment in Model)
            {
                <tr>
                    <td>@appointment.Patient?.FirstName @appointment.Patient?.LastName</td>
                    <td>@appointment.Specialization</td>
                    <td>@appointment.Date.ToString("g")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@appointment.Id">Details</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No upcoming appointments.</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to Appointments</a>
</div>
