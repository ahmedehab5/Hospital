@using Hospital.ViewModels

@model IEnumerable<RoleViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Roles</h1>
<br/>


<a asp-action="Create" class="btn btn-success">Create Role</a>
<br/>

@{
    if (Model.Count() > 0)
    {
        
        <br />
        <table class="table table-striped table-hover mt-3">

            <thead>
                <tr>
                    <td>Id</td>
                    <td>Role Name</td>                   
                    <td>Details</td>
                    <td>Update</td>
                    <td>Delete</td>

                </tr>
            </thead>

            <tbody>
                @foreach (var Role in Model)
                {
                    <tr>
                        <td>@Role.Id</td>
                        <td>@Role.RoleName</td>

                        <td><a asp-action="Details" asp-route-id="@Role.Id" class="text-info"><i class="fas fa-eye"></i></a></td>
                        <td><a asp-action="Edit" asp-route-id="@Role.Id" class="text-warning"><i class="fas fa-edit"></i></a></td>
                        <td><a asp-action="Delete" asp-route-id="@Role.Id" class="text-danger"><i class="fas fa-trash"></i></a></td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <div class="mt-5 alert alert-warning">
            <h3>No Roles</h3>
        </div>
    }
}

