@model IEnumerable<Patient>
@{

    ViewData["Title"] = "All Patients";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Patients</h1>
<br/>

<a asp-action="Create" class="btn btn-success">Create Patient</a>
<br/>
@{
    if (Model.Count() > 0)
    {
       
        <br/>
        <table class="table table-striped table-hover mt-3">

            <thead>
                <tr>
                    <td>Id</td>
                    <td>First Name</td>
                    <td>Last Name</td>
                    <td>Email</td>
                    <td>Phone Number</td>
                    <td>Age</td>                  
                    <td>Gender</td>
                    <td>Details</td>
                    <td>Update</td>
                    <td>Delete</td>

                </tr>
            </thead>

            <tbody>
                @foreach(var patient in Model)
                {
                    <tr>
                        <td>@patient.Id</td>
                        <td>@patient.FirstName</td>
                        <td>@patient.LastName</td>
                        <td>@patient.Email</td>
                        <td>@patient.PhoneNumber</td>                      
                        <td>@patient.Age</td>
                        <td>@patient.Gender</td>
                        <td><a asp-action="Details" asp-route-id="@patient.Id" class="text-info" class="text-info"><i class="fas fa-eye"></i></a></td>
                        <td><a asp-action="Edit" asp-route-id="@patient.Id" class="text-warning"><i class="fas fa-edit"></i></a></td>
                        <td><a asp-action="Delete" asp-route-id="@patient.Id" class="text-danger"><i class="fas fa-trash"></i></a></td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <div class="mt-5 alert alert-warning"> <h3>No Patients</h3>
        </div>
    }
}
@section ValidationScriptSection
{
    <partial name="_ValidationScriptsPartial" />
}
